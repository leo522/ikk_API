<div class="form-horizontal">

    @Html.ValidationSummary(true)

    <div class="form-group">
        <div class="form-group">
            @Html.Label("ID", "編號", new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.TextBox("Txt_ID")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Name", "名稱", new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.TextBox("Txt_Name")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Description", "說明描述", new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                <div class="editor-field">
                    @Html.TextArea("Txt_Description", new { @class = "form-control ", rows = "5" })
                </div>
            </div>

        </div>
    </div>
</div>